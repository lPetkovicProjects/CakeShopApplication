@model Cake

<div class="container marginTop">
    <div class="row">
        <div class="card">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-block">
                <!--Title-->
                <h4 class="card-title">@Model.Name</h4>
                <!--Text-->
                <p class="card-text">@Model.Description</p>             
            </div>
            <p class="btn btn-group pull-right">
                <a asp-controller="Cake" asp-action="List" class="btn btn-default">Show all Cakes</a>
                <a class="btn btn-success " id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-cakeId="@Model.CakeId">
                    Add @Model.Name to cart
                </a>
            </p>
        </div>
    </div>
</div>

