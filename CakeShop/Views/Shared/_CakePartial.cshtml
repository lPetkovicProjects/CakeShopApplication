

@model Cake


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail" style="border:0px;">
        <img src="@Model.ImageThumbnailUrl" alt="" style=" width:250px; height:250px;" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Cake" asp-action="Details" asp-route-cakeId="@Model.CakeId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success " id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-cakeId="@Model.CakeId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>